  <!-- Schema Markup with Keywords -->
  <script type="application/ld+json">
    {% if template == 'index' %}
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "{{ shop.name | escape }}",
      "url": "{{ canonical_url | escape }}",
      "potentialAction": {
        "@type": "SearchAction",
        "target": "{{ shop.url }}/search?q={search_term_string}",
        "query-input": "required name=search_term_string"
      },
      "description": "{{ shop.name }} - Your source for home laser machines and hair removal laser devices including"
    },
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "{{ shop.name | escape }}",
      "url": "{{ shop.url | escape }}",
      "logo": "{{ settings.favicon | image_url | escape }}",
      "sameAs": ["https://twitter.com/yourhandle", "https://facebook.com/yourpage", "https://instagram.com/yourprofile"],
      "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "+1-123-456-7890",
        "contactType": "Customer Service",
        "email": "{{ shop.email | escape }}"
      }
    },
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [{
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "{{ shop.url | escape }}"
      }]
    },
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [{
        "@type": "Question",
        "name": "What is the best home laser machine for hair removal?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "{{ shop.name }} offers top home hair removal laser devices like Secretreza Redline for DIY laser hair removal at home."
        }
      }, {
        "@type": "Question",
        "name": "How does Secretreza compare to Philips laser devices?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Secretreza Redline at {{ shop.name }} provides advanced in-home hair removal laser technology, often outperforming Philips in ease of use."
        }
      }]
    },
    {% assign featured_product = collections.frontpage.products.first %}
    {% if featured_product %}
    {
      "@context": "https://schema.org",
      "@type": "Product",
      "name": "{{ featured_product.title | escape | default: 'Home Laser Machine for Hair Removal' }}",
      "image": "{{ featured_product.featured_image | image_url | escape }}",
      "description": "{{ featured_product.description | strip_html | truncate: 200 | escape | default: 'Discover the best home hair removal laser device at ' | append: shop.name }}",
      "sku": "{{ featured_product.variants.first.sku | escape | default: 'LASERLY-HOME-001' }}",
      "mpn": "{{ featured_product.variants.first.id | escape }}",
      "brand": {
        "@type": "Brand",
        "name": "{{ shop.name | escape }}"
      },
      "offers": {
        "@type": "Offer",
        "url": "{{ featured_product.url | absolute_url | escape }}",
        "priceCurrency": "{{ shop.currency | escape }}",
        "price": "{{ featured_product.price | money_without_currency | escape | default: '99.99' }}",
        "priceValidUntil": "{{ 'now' | date: '%Y-%m-%d' | date: '%Y-12-31' }}",
        "availability": "{% if featured_product.available %}https://schema.org/InStock{% else %}https://schema.org/OutOfStock{% endif %}",
        "itemCondition": "https://schema.org/NewCondition",
        "seller": {
          "@type": "Organization",
          "name": "{{ shop.name | escape }}"
        }
      }
    }
    {% endif %}
    {% endif %}
  </script>.
  <meta name="google-site-verification" content="0JwRcVs7tPZHiJABXNjIMnTTFc0xcOD8y8fGDn3brk0" />
</head>
