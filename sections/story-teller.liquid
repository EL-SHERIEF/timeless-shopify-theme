{% schema %}
{
  "name": "Media with Text Section",
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#fff9f3"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#1a1a1a"
    }
  ],
  "blocks": [
    {
      "type": "media_text_block",
      "name": "Media with Text Block",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Secure technology suitable for most skin and hair types"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Our technology adapts to your skin type for optimal results safely. Thanks to PrecisionPulseâ„¢ IPL technology, which flashes at 10 ms, up to 4 times longer than competing IPL, the light is primarily absorbed by the melanin in your hair and not by that in your skin."
        },
        {
          "type": "select",
          "id": "media_type",
          "label": "Media Type",
          "options": [
            { "value": "image", "label": "Image" },
            { "value": "video", "label": "Video" }
          ],
          "default": "image"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "Upload an image if media type is set to 'Image'"
        },
        {
          "type": "url",
          "id": "video_url",
          "label": "Video URL",
          "info": "Enter a direct video URL (e.g., .mp4 hosted on your store) if media type is set to 'Video'"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Media with Text Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="media-text-section">
  <div class="section-container" style="--background: {{ section.settings.background_color | split: '#' | last | prepend: '#' }}; --text-color: {{ section.settings.text_color | split: '#' | last | prepend: '#' }};">
    <div class="content-wrapper">
      {% for block in section.blocks %}
        <div class="media-text-block {% if forloop.last == false %}block-spacing{% endif %}" {{ block.shopify_attributes }}>
          <div class="media-container">
            {% if block.settings.media_type == "image" and block.settings.image %}
              <img src="{{ block.settings.image | img_url: '800x' }}" alt="{{ block.settings.title | escape }}" loading="lazy" class="media-image">
            {% elsif block.settings.media_type == "video" and block.settings.video_url %}
              <video src="{{ block.settings.video_url }}" autoplay loop muted class="media-video" playsinline>
                Your browser does not support the video tag.
              </video>
            {% else %}
              <div class="media-placeholder"></div>
            {% endif %}
          </div>
          <div class="text-container">
            <h3 class="title">{{ block.settings.title }}</h3>
            <p class="description">{{ block.settings.description }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const blocks = document.querySelectorAll('.media-text-block');
    blocks.forEach((block, index) => {
      if (index % 2 === 0) {
        block.classList.add('reverse-layout');
      }
    });
  });
</script>

<style>
  :root {
    --spacing-unit: 1rem;
    --max-width: 72rem;
    --shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    --transition: all 0.3s ease;
  }

  .media-text-section {
    padding: var(--spacing-unit);
  }

  .section-container {
    color: var(--text-color, #1a1a1a);
    padding: calc(var(--spacing-unit) * 2) 0;
  }

  .content-wrapper {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--spacing-unit);
  }

  .media-text-block {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-unit);
    align-items: center;
    transition: var(--transition);
  }

  .block-spacing {
    margin-bottom: calc(var(--spacing-unit) * 2);
  }

  .media-container,
  .text-container {
    width: 100%;
    max-width: 100%;
  }

  .media-image,
  .media-video {
    width: 100%;
    height: auto;
    border-radius: 12px;
    object-fit: cover;
    box-shadow: var(--shadow);
    transition: transform var(--transition);
  }

  .media-video {
    min-height: 250px;
  }

  .media-placeholder {
    width: 100%;
    height: 250px;
    background-color: #e5e7eb;
    border-radius: 12px;
    box-shadow: var(--shadow);
  }

  .text-container {
    padding: var(--spacing-unit);
    background: rgba(255, 255, 255, 0.9);
    border-radius: 12px;
    box-shadow: var(--shadow);
  }

  .title {
    font-size: 1.75rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: calc(var(--spacing-unit) / 2);
    color: var(--text-color, #1a1a1a);
  }

  .description {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--text-color, #1a1a1a);
    opacity: 0.9;
  }

  /* Large Screens (Row Layout) */
  @media (min-width: 768px) {
    .media-text-block {
      flex-direction: row;
      align-items: center;
      gap: calc(var(--spacing-unit) * 2);
    }

    .reverse-layout {
      flex-direction: row-reverse;
    }

    .media-container,
    .text-container {
      width: 50%;
    }

    .title {
      font-size: 2rem;
    }

    .description {
      font-size: 1.125rem;
    }

    .media-image:hover,
    .media-video:hover {
      transform: scale(1.02);
    }
  }

  /* Small Screens (Column Layout) */
  @media (max-width: 767px) {
    .title {
      font-size: 1.5rem;
    }

    .description {
      font-size: 0.875rem;
    }

    .media-video {
      min-height: 200px;
    }

    .media-placeholder {
      height: 200px;
    }
  }
</style>