      <path fill-rule="evenodd" clip-rule="evenodd" d="M236.498 473.339C210.206 473.339 195.658 470.517 172.035 462.591L126.791 485.223C98.2163 499.517 64.5961 478.729 64.5961 446.767V398.099C18.3233 354.933 0.132812 305.161 0.132812 236.871C0.132812 106.273 105.957 0.402344 236.498 0.402344C367.038 0.402344 472.863 106.273 472.863 236.871C472.863 367.468 367.038 473.339 236.498 473.339ZM107.572 379.403L93.9043 366.653C57.9536 333.118 43.1083 295.625 43.1083 236.871C43.1083 130.018 129.692 43.3966 236.498 43.3966C343.305 43.3966 429.888 130.018 429.888 236.871C429.888 343.725 343.305 430.345 236.498 430.345C215.318 430.345 205.384 428.432 185.7 421.828L168.779 416.151L107.572 446.767V379.403Z" fill="#0F0F0F"/>
    </svg>
  </div>

  <!-- Message Input and Send Button -->
  <div id="wa-input-container" class="flex items-center gap-3 transition-opacity duration-150 ps-4" style="display:none;"
    onmouseenter="this.style.display='flex';"
    onmouseleave="if(document.getElementById('wa-message').value.trim()==='') { this.style.display='none'; }">
    <textarea id="wa-message" class="wa-message" style="background-color: #2A3942; color: white; padding: 10px; resize: none; max-height: 45px; border-radius: 12px; outline: none; border: none; width: 256px; transition: all 500ms;"
      placeholder="{{ settings.whatsapp_placeholder }}"></textarea>
    <a id="wa-send" href="{{ settings.wa_link }}" target="_blank" class="wa-send" style="display: flex; align-items: center; justify-content: center; background-color: #202C33; padding: 17px; border-radius: 16px;">
      <img src="{{ 'waSend.svg' | asset_url }}" width="28" height="28" alt="Send" style="transition: all 150ms;">
    </a>
  </div>
</div>

<script>
  (function(){
    var waMessage = document.getElementById('wa-message');
    var waSend = document.getElementById('wa-send');
    // Update the WhatsApp link whenever the message changes.
    waMessage.addEventListener('input', function(){
      var encodedMessage = encodeURIComponent(waMessage.value);
      // The base link comes from the section setting.
      var baseLink = "{{ settings.wa_link }}";
      waSend.href = baseLink + "?text=" + encodedMessage;
    });
  })();
</script>

{% schema %}
{
  "name": "WhatsApp Button",
  "settings": [
    {
      "type": "text",
      "id": "wa_link",
      "label": "WhatsApp Link (wa.me URL)",
      "default": "https://wa.me/1234567890"
    },
    {
      "type": "text",
      "id": "whatsapp_placeholder",
      "label": "Message Placeholder",
      "default": "Send a message"
    }
  ],
  "presets": [
    {
      "name": "WhatsApp Button"
    }
  ]
}
{% endschema %}
