            {% endfor %}
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
    <div class="swiper-pagination"></div>
  </div>
</div>

<style>
.testimonial-section {
  padding: 50px 0;
  display: flex;
  justify-content: center;
}
.testimonial-swiper {
  padding:40px 0;
  width: 80%;
}
.testimonial-card {
  padding: 20px;
  border-radius: 10px;
  max-width: 600px;
  margin: auto;
     align-content: flex-start;
    align-items: flex-start;
    display: flex;
    flex: none;
    flex-direction: column;
    flex-wrap: nowrap;
    gap: 32px;
    height: min-content;
    justify-content: flex-start;
    max-width: 625px;
    overflow: visible;
    padding: 0;
    position: relative;
    width: 100%;
}
.testimonial-header {
align-content: center;
    align-items: center;
    display: flex;
    flex: none;
    flex-direction: row;
    flex-wrap: nowrap;
    gap: 16px;
    height: min-content;
    justify-content: flex-start;
    overflow: visible;
    padding: 0;
    position: relative;
    width: 100%;

}
.customer-image {
  width: 59px;
  height: 59px;
  border-radius: 50%;
}
.customer-info h3 {
  margin: 0;
  font-size: 18px;
  font-weight:900;
}
.customer-info p {
  margin: 0;
  font-size: 18px;
  color: #111111;
    font-weight:900;

}
.testimonial-text {
  font-size: 28px;
  color: #1111111;
  font-weight:900;
  line-height: 1.4;
}
.star-rating {
  display: flex;
}
.star-icon {
  width: 20px;
  height: 20px;
  margin-right: 3px;
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
  var swiper = new Swiper(".testimonial-swiper", {
    slidesPerView: "auto",
    spaceBetween: 30, // Added spacing for a more modern, airy look
    loop: true,
    speed: 5000, // Increased speed for an ultra-smooth continuous scroll
    autoplay: {
      delay: 1000, // No delay for continuous movement
      disableOnInteraction: false,
    },
    freeMode: {
      enabled: true,
      momentum: false, // Disable momentum to keep the movement uniform
    },
    simulateTouch: false, // Prevents accidental user interruption for a seamless flow
    // Uncomment the following block if you'd like a fade effect on slide change
    // effect: 'fade',
    // fadeEffect: {
    //   crossFade: true
    // },
  });
});
</script>

