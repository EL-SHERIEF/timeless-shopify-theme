{% schema %}
{
  "name": "Testimonials",
  "settings": [],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "image_picker",
          "id": "customer_image",
          "label": "Customer Image"
        },
        {
          "type": "text",
          "id": "customer_name",
          "label": "Customer Name",
          "default": "John Doe"
        },
        {
          "type": "text",
          "id": "customer_position",
          "label": "Customer Position",
          "default": "CEO, Company"
        },
        {
          "type": "textarea",
          "id": "testimonial_text",
          "label": "Testimonial Text",
          "default": "This is an amazing product! I absolutely love it."
        },
        {
          "type": "range",
          "id": "star_rating",
          "label": "Star Rating",
          "min": 1,
          "max": 5,
          "step": 1,
          "default": 5
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials",
      "category": "Custom",
      "blocks": [
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="testimonial-section">
  <div class="swiper testimonial-swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
      <div class="swiper-slide">
        <div class="testimonial-card">
          <div class="testimonial-header">
            {% if block.settings.customer_image %}
            <img src="{{ block.settings.customer_image | img_url: '100x100' }}" alt="{{ block.settings.customer_name }}" class="customer-image">
            {% endif %}
            <div class="customer-info">
              <h3>{{ block.settings.customer_name }}</h3>
              <p>{{ block.settings.customer_position }}</p>
            </div>
          </div>
          <p class="testimonial-text">"{{ block.settings.testimonial_text }}"</p>
          <div class="star-rating">
            {% for i in (1..block.settings.star_rating) %}
              <svg class="star-icon" height="16" width="16" viewBox="0 0 47.94 47.94" fill="#FFD700">
                <path d="M26.285,2.486l5.407,10.956c0.376,0.762,1.103,1.29,1.944,1.412l12.091,1.757c2.118,0.308,2.963,2.91,1.431,4.403l-8.749,8.528c-0.608,0.593-0.886,1.448-0.742,2.285l2.065,12.042c0.362,2.109-1.852,3.717-3.746,2.722l-10.814-5.685c-0.752-0.395-1.651-0.395-2.403,0l-10.814,5.685c-1.894,0.996-4.108-0.613-3.746-2.722l2.065-12.042c0.144-0.837-0.134-1.692-0.742-2.285l-8.749-8.528c-1.532-1.494-0.687-4.096,1.431-4.403l12.091-1.757c0.841-0.122,1.568-0.65,1.944-1.412l5.407-10.956C22.602,0.567,25.338,0.567,26.285,2.486z"></path>
              </svg>
            {% endfor %}
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
    <div class="swiper-pagination"></div>
  </div>
</div>

<style>
.testimonial-section {
  padding: 50px 0;
  background: #f8f9fa;
  display: flex;
  justify-content: center;
}
.testimonial-swiper {
  padding:40px 0;
  width: 80%;
}
.testimonial-card {
  background: white;
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  max-width: 600px;
  margin: auto;
}
.testimonial-header {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
}
.customer-image {
  width: 59px;
  height: 59px;
  border-radius: 50%;
  margin-right: 16px;
}
.customer-info h3 {
  margin: 0;
  font-size: 18px;
  font-weight:900;
}
.customer-info p {
  margin: 0;
  font-size: 18px;
  color: #111111;
    font-weight:900;

}
.testimonial-text {
  font-size: 28px;
  color: #1111111;
  font-weight:900;
  line-height: 1.4;
  margin-bottom: 10px;
}
.star-rating {
  display: flex;
}
.star-icon {
  width: 20px;
  height: 20px;
  margin-right: 3px;
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
  var swiper = new Swiper(".testimonial-swiper", {
    slidesPerView: 1,
    spaceBetween: 20,
    loop: true,
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
  });
});
</script>
