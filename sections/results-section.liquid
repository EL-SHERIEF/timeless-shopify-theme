  }

  .text-base {
    font-size: 1rem;
    line-height: 1.5rem;
  }

  .text-gray-700 {
    color: #374151;
  }

  /* Responsive Adjustments */
  @media (max-width: 768px) {
    .text-2xl {
      font-size: 1.25rem;
    }

    .md:text-3xl {
      font-size: 1.5rem;
    }

    .text-base {
