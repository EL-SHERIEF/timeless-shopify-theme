{% schema %}
{
  "name": "Results Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Users Achieved Exceptional Results In Just 4 Weeks"
    },
    {
      "type": "text",
      "id": "highlight_text",
      "label": "Highlight Text",
      "default": "In Just 4 Weeks"
    },
    {
      "type": "textarea",
      "id": "result_1_text",
      "label": "Result 1 Text",
      "default": "Observed a significant reduction in hair density after just 4 weeks of use."
    },
    {
      "type": "text",
      "id": "result_1_percentage",
      "label": "Result 1 Percentage",
      "default": "95"
    },
    {
      "type": "textarea",
      "id": "result_2_text",
      "label": "Result 2 Text",
      "default": "Noticed a visible reduction in hair regrowth, leaving their skin smoother and softer."
    },
    {
      "type": "text",
      "id": "result_2_percentage",
      "label": "Result 2 Percentage",
      "default": "94"
    },
    {
      "type": "textarea",
      "id": "result_3_text",
      "label": "Result 3 Text",
      "default": "Reported a notable reduction in irritation and redness, enjoying calmer and healthier skin."
    },
    {
      "type": "text",
      "id": "result_3_percentage",
      "label": "Result 3 Percentage",
      "default": "92"
    }
  ],
  "presets": [
    {
      "name": "Results Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="results-section section section-blends section-full">
  <div class="bg-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <!-- Section Title -->
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
        {{ section.settings.heading | split: ' ' | map: 'split', 'In' | first | join: ' ' }}
        <span class="text-yellow-500">{{ section.settings.highlight_text }}</span>
      </h2>

      <!-- Grid for Circles -->
      <div class="mt-10 grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- First Circle -->
        <div class="flex flex-col items-center">
          <div class="relative">
            <!-- SVG Circle -->
            <svg class="w-24 h-24 text-yellow-500" viewBox="0 0 36 36" xmlns="http://www.w3.org/2000/svg">
              <!-- Background Circle -->
              <circle class="text-gray-200" stroke="currentColor" stroke-width="3" fill="none" cx="18" cy="18" r="15.915"></circle>
              <!-- Progress Circle -->
              <circle class="text-yellow-500" stroke="currentColor" stroke-width="3" stroke-dasharray="{{ section.settings.result_1_percentage | times: 1.0 }}, {{ 100 | minus: section.settings.result_1_percentage | times: 1.0 }}" stroke-linecap="round" fill="none" cx="18" cy="18" r="15.915" style="transform: rotate(-90deg); transform-origin: center;"></circle>
            </svg>
            <!-- Center Text -->
            <div class="absolute inset-0 flex items-center justify-center">
              <span class="text-3xl font-bold text-gray-900">{{ section.settings.result_1_percentage }}%</span>
            </div>
          </div>
          <p class="mt-4 text-lg text-gray-700">{{ section.settings.result_1_text }}</p>
        </div>

        <!-- Second Circle -->
        <div class="flex flex-col items-center">
          <div class="relative">
            <svg class="w-24 h-24 text-yellow-500" viewBox="0 0 36 36" xmlns="http://www.w3.org/2000/svg">
              <!-- Background Circle -->
              <circle class="text-gray-200" stroke="currentColor" stroke-width="3" fill="none" cx="18" cy="18" r="15.915"></circle>
              <!-- Progress Circle -->
              <circle class="text-yellow-500" stroke="currentColor" stroke-width="3" stroke-dasharray="{{ section.settings.result_2_percentage | times: 1.0 }}, {{ 100 | minus: section.settings.result_2_percentage | times: 1.0 }}" stroke-linecap="round" fill="none" cx="18" cy="18" r="15.915" style="transform: rotate(-90deg); transform-origin: center;"></circle>
            </svg>
            <div class="absolute inset-0 flex items-center justify-center">
              <span class="text-3xl font-bold text-gray-900">{{ section.settings.result_2_percentage }}%</span>
            </div>
          </div>
          <p class="mt-4 text-lg text-gray-700">{{ section.settings.result_2_text }}</p>
        </div>

        <!-- Third Circle -->
        <div class="flex flex-col items-center">
          <div class="relative">
            <svg class="w-24 h-24 text-yellow-500" viewBox="0 0 36 36" xmlns="http://www.w3.org/2000/svg">
              <!-- Background Circle -->
              <circle class="text-gray-200" stroke="currentColor" stroke-width="3" fill="none" cx="18" cy="18" r="15.915"></circle>
              <!-- Progress Circle -->
              <circle class="text-yellow-500" stroke="currentColor" stroke-width="3" stroke-dasharray="{{ section.settings.result_3_percentage | times: 1.0 }}, {{ 100 | minus: section.settings.result_3_percentage | times: 1.0 }}" stroke-linecap="round" fill="none" cx="18" cy="18" r="15.915" style="transform: rotate(-90deg); transform-origin: center;"></circle>
            </svg>
            <div class="absolute inset-0 flex items-center justify-center">
              <span class="text-3xl font-bold text-gray-900">{{ section.settings.result_3_percentage }}%</span>
            </div>
          </div>
          <p class="mt-4 text-lg text-gray-700">{{ section.settings.result_3_text }}</p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .results-section {
    padding: 40px 20px;
  }

  .bg-white {
    background-color: #ffffff;
  }

  .py-12 {
    padding-top: 3rem;
    padding-bottom: 3rem;
  }

  .max-w-7xl {
    max-width: 80rem;
  }

  .mx-auto {
    margin-left: auto;
    margin-right: auto;
  }

  .px-4 {
    padding-left: 1rem;
    padding-right: 1rem;
  }

  .sm:px-6 {
    padding-left: 1.5rem;
    padding-right: 1.5rem;
  }

  .lg:px-8 {
    padding-left: 2rem;
    padding-right: 2rem;
  }

  .text-center {
    text-align: center;
  }

  .text-3xl {
    font-size: 1.875rem;
    line-height: 2.25rem;
  }

  .sm:text-4xl {
    font-size: 2.25rem;
    line-height: 2.5rem;
  }

  .font-bold {
    font-weight: 700;
  }

  .tracking-tight {
    letter-spacing: -0.025em;
  }

  .text-gray-900 {
    color: #111827;
  }

  .text-yellow-500 {
    color: #f59e0b;
  }

  .mt-10 {
    margin-top: 2.5rem;
  }

  .grid {
    display: grid;
  }

  .grid-cols-1 {
    grid-template-columns: repeat(1, minmax(0, 1fr));
  }

  .md:grid-cols-3 {
    grid-template-columns: repeat(3, minmax(0, 1fr));
  }

  .gap-8 {
    gap: 2rem;
  }

  .flex {
    display: flex;
  }

  .flex-col {
    flex-direction: column;
  }

  .items-center {
    align-items: center;
  }

  .mt-4 {
    margin-top: 1rem;
  }

  .text-lg {
    font-size: 1.125rem;
    line-height: 1.75rem;
  }

  .text-gray-700 {
    color: #374151;
  }

  .font-semibold {
    font-weight: 600;
  }

  /* Responsive Adjustments */
  @media (max-width: 768px) {
    .text-3xl {
      font-size: 1.5rem;
    }

    .sm:text-4xl {
      font-size: 1.875rem;
    }

    .text-lg {
      font-size: 1rem;
    }
  }
</style>