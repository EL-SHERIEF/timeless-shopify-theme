{% schema %}
{
  "name": "Results Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Users Achieved Exceptional Results In Just 4 Weeks"
    },
    {
      "type": "text",
      "id": "highlight_text",
      "label": "Highlight Text",
      "default": "In Just 4 Weeks"
    },
    {
      "type": "textarea",
      "id": "result_1_text",
      "label": "Result 1 Text",
      "default": "Observed a significant reduction in hair density after just 4 weeks of use."
    },
    {
      "type": "text",
      "id": "result_1_percentage",
      "label": "Result 1 Percentage",
      "default": "95"
    },
    {
      "type": "textarea",
      "id": "result_2_text",
      "label": "Result 2 Text",
      "default": "Noticed a visible reduction in hair regrowth, leaving their skin smoother and softer."
    },
    {
      "type": "text",
      "id": "result_2_percentage",
      "label": "Result 2 Percentage",
      "default": "94"
    },
    {
      "type": "textarea",
      "id": "result_3_text",
      "label": "Result 3 Text",
      "default": "Reported a notable reduction in irritation and redness, enjoying calmer and healthier skin."
    },
    {
      "type": "text",
      "id": "result_3_percentage",
      "label": "Result 3 Percentage",
      "default": "92"
    }
  ],
  "presets": [
    {
      "name": "Results Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="results-section section section-blends section-full">
  <div class="bg-white py-8">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <!-- Section Title -->
      <h2 class="text-2xl md:text-3xl font-bold tracking-tight text-gray-900">
        {% assign heading_parts = section.settings.heading | split: section.settings.highlight_text %}
        {{ heading_parts[0] }}<span class="text-yellow-500">{{ section.settings.highlight_text }}</span>{{ heading_parts[1] | strip }}
      </h2>

      <!-- Grid for Circles -->
      <div class="mt-6 grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- First Circle -->
        <div class="flex flex-col items-center">
          <div class="relative w-20 h-20 flex items-center justify-center bg-yellow-500 rounded-full">
            <span class="text-2xl font-bold text-gray-900">{{ section.settings.result_1_percentage }}%</span>
          </div>
          <p class="mt-2 text-base text-gray-700 text-center">{{ section.settings.result_1_text }}</p>
        </div>

        <!-- Second Circle -->
        <div class="flex flex-col items-center">
          <div class="relative w-20 h-20 flex items-center justify-center bg-yellow-500 rounded-full">
            <span class="text-2xl font-bold text-gray-900">{{ section.settings.result_2_percentage }}%</span>
          </div>
          <p class="mt-2 text-base text-gray-700 text-center">{{ section.settings.result_2_text }}</p>
        </div>

        <!-- Third Circle -->
        <div class="flex flex-col items-center">
          <div class="relative w-20 h-20 flex items-center justify-center bg-yellow-500 rounded-full">
            <span class="text-2xl font-bold text-gray-900">{{ section.settings.result_3_percentage }}%</span>
          </div>
          <p class="mt-2 text-base text-gray-700 text-center">{{ section.settings.result_3_text }}</p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .results-section {
    padding: 20px 10px;
  }

  .bg-white {
    background-color: #ffffff;
  }

  .py-8 {
    padding-top: 2rem;
    padding-bottom: 2rem;
  }

  .max-w-5xl {
    max-width: 64rem;
  }

  .mx-auto {
    margin-left: auto;
    margin-right: auto;
  }

  .px-4 {
    padding-left: 1rem;
    padding-right: 1rem;
  }

  .sm:px-6 {
    padding-left: 1.5rem;
    padding-right: 1.5rem;
  }

  .lg:px-8 {
    padding-left: 2rem;
    padding-right: 2rem;
  }

  .text-center {
    text-align: center;
  }

  .text-2xl {
    font-size: 1.5rem;
    line-height: 2rem;
  }

  .md:text-3xl {
    font-size: 1.875rem;
    line-height: 2.25rem;
  }

  .font-bold {
    font-weight: 700;
  }

  .tracking-tight {
    letter-spacing: -0.025em;
  }

  .text-gray-900 {
    color: #111827;
  }

  .text-yellow-500 {
    color: #f59e0b;
  }

  .mt-6 {
    margin-top: 1.5rem;
  }

  .grid {
    display: grid;
  }

  .grid-cols-1 {
    grid-template-columns: repeat(1, minmax(0, 1fr));
  }

  .md:grid-cols-3 {
    grid-template-columns: repeat(3, minmax(0, 1fr));
  }

  .gap-6 {
    gap: 1.5rem;
  }

  .flex {
    display: flex;
  }

  .flex-col {
    flex-direction: column;
  }

  .items-center {
