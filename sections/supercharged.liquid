{% schema %}
{
  "name": "Team Arsenal Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Supercharge your team arsenal"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Block",
      "settings": [
        {
          "type": "text",
          "id": "feature_title",
          "label": "Feature Title",
          "default": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "feature_subtitle",
          "label": "Feature Subtitle",
          "default": "Feature description goes here."
        },
        {
          "type": "image_picker",
          "id": "feature_image",
          "label": "Feature Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Team Arsenal Section",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<style>
.team-arsenal-section {
  padding: 4rem 2rem;
  background-color: #f8f9fb;
}

.team-arsenal-container {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.team-arsenal-text {
  width: 100%;
}

.team-arsenal-text h2 {
  font-size: 2rem;
  font-weight: 700;
  margin-bottom: 1.5rem;
}

.team-arsenal-text .feature {
  margin-bottom: 2rem;
}

.team-arsenal-text h4 {
  font-size: 1.2rem;
  font-weight: 600;
  margin-bottom: 0.5rem;
}

.team-arsenal-text p {
  font-size: 1rem;
  color: #555;
}

.team-arsenal-text img {
  max-width: 100%;
  height: auto;
  border-radius: 10px;
  margin-top: 1rem;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

@media (max-width: 768px) {
  .team-arsenal-text {
    padding-right: 0;
    margin-bottom: 2rem;
  }
}
</style>

<section class="team-arsenal-section">
  <div class="team-arsenal-container">
    <div class="team-arsenal-text">
      <h2>{{ section.settings.heading }}</h2>
      {% for block in section.blocks %}
        <div class="feature">
          <h4>{{ block.settings.feature_title }}</h4>
          <p>{{ block.settings.feature_subtitle }}</p>
          {% if block.settings.feature_image %}
            <img src="{{ block.settings.feature_image | file_url }}" alt="{{ block.settings.feature_title }}">
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>
