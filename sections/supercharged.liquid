{% schema %}
{
  "name": "features2",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Supercharge your team arsenal"
    },
    {
      "type": "image_picker",
      "id": "large_image",
      "label": "Large Image"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Block",
      "settings": [
        {
          "type": "text",
          "id": "feature_title",
          "label": "Feature Title",
          "default": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "feature_subtitle",
          "label": "Feature Subtitle",
          "default": "Feature description goes here."
        }
      ]
    },
    {
      "type": "floating_box",
      "name": "Floating Box",
      "settings": [
        {
          "type": "text",
          "id": "floating_title",
          "label": "Floating Box Title",
          "default": "Stewart J."
        },
        {
          "type": "textarea",
          "id": "floating_content",
          "label": "Floating Box Content",
          "default": "This is awesome! Great job! Will mark this as done @Dina."
        },
        {
          "type": "image_picker",
          "id": "floating_image",
          "label": "Floating Box Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Team Arsenal Section with Floating Box",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<style>
.team-arsenal-section {
  padding: 4rem 2rem;
  background-color: #f8f9fb;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
}

.team-arsenal-text {
  width: 50%;
}

.team-arsenal-text h2 {
  font-size: 2rem;
  font-weight: 700;
  margin-bottom: 1.5rem;
}

.team-arsenal-text .feature {
  margin-bottom: 2rem;
}

.team-arsenal-text h4 {
  font-size: 1.2rem;
  font-weight: 600;
  margin-bottom: 0.5rem;
}

.team-arsenal-text p {
  font-size: 1rem;
  color: #555;
}

.team-arsenal-image-container {
  position: relative;
  width: 45%;
}

.team-arsenal-image {
  width: 100%;
  border-radius: 20px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
}

.floating-box {
  position: absolute;
  top: 20%;
  left: 50%;
  background-color: #000;
  color: #fff;
  padding: 1rem;
  border-radius: 10px;
  width: 250px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
}

.floating-box img {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 0.5rem;
  vertical-align: middle;
}

.floating-box-title {
  font-weight: bold;
  display: flex;
  align-items: center;
}

.floating-box-content {
  font-size: 0.9rem;
  margin-top: 0.5rem;
}
</style>

<section class="team-arsenal-section">
  <div class="team-arsenal-text">
    <h2>{{ section.settings.heading }}</h2>
    {% for block in section.blocks %}
      {% if block.type == "feature" %}
        <div class="feature">
          <h4>{{ block.settings.feature_title }}</h4>
          <p>{{ block.settings.feature_subtitle }}</p>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <div class="team-arsenal-image-container">
    {% if section.settings.large_image %}
                <img src="{{ section.settings.large_image | img_url: 'large' }}" alt="Image">
    {% endif %}

    {% for block in section.blocks %}
      {% if block.type == "floating_box" %}
        <div class="floating-box">
          <div class="floating-box-title">
            {% if block.settings.floating_image %}
              <img src="{{ block.settings.floating_image | img_url: 'small' }}" alt="Floating Box Image">
            {% endif %}
            <span>{{ block.settings.floating_title }}</span>
          </div>
          <div class="floating-box-content">
            {{ block.settings.floating_content }}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>
