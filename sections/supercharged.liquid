{% schema %}
{
  "name": "features2",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Supercharge your team arsenal"
    },
    {
      "type": "image_picker",
      "id": "large_image",
      "label": "Large Image"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Block",
      "settings": [
        {
          "type": "text",
          "id": "feature_title",
          "label": "Feature Title",
          "default": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "feature_subtitle",
          "label": "Feature Subtitle",
          "default": "Feature description goes here."
        },
        {
          "type": "image_picker",
          "id": "feature_icon",
          "label": "Feature Icon"
        }
      ]
    },
    {
      "type": "floating_box",
      "name": "Floating Box",
      "settings": [
        {
          "type": "text",
          "id": "floating_title",
          "label": "Floating Box Title",
          "default": "Stewart J."
        },
        {
          "type": "textarea",
          "id": "floating_content",
          "label": "Floating Box Content",
          "default": "This is awesome! Great job! Will mark this as done @Dina."
        },
        {
          "type": "image_picker",
          "id": "floating_image",
          "label": "Floating Box Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Team Arsenal Section with Floating Box",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<style>
.team-arsenal-section {
  /* White background to match the screenshot */
  background-color: #fff;
  padding: 60px 20px;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
}

/* Left column containing heading + feature blocks */
.team-arsenal-text {
  width: 50%;
  padding-right: 40px;
}

.team-arsenal-text h2 {
  font-size: 54px;
  line-height:1.1;letter-spacing:-1.5px;
  font-weight: 800 !important;
  color:#111111;
  margin-bottom: 1.5rem;
}

/* Each feature (heading + paragraph) */
.team-arsenal-text .feature {
  margin-bottom: 2rem;
  display:flex;flex-direction:row;justify-content:start;align-items:center
}
.team-arsenal-text .feature .content{
    display:flex;flex-direction:column;justify-content:start;align-items:start
}
/* Optional feature icon (if used) */
.feature-icon {
  width: 30px;
  height: 30px;
  margin-right: 1rem;
  vertical-align: middle;
  object-fit: contain;
}

/* Feature title */
.team-arsenal-text h4 {
  font-size: 1.1rem;
  font-weight: 600;
  margin-bottom: 0.5rem;
  margin-top: 0; /* Remove default margin if needed */
}

/* Feature subtitle (paragraph) */
.team-arsenal-text p {
  font-size: 0.95rem;
  color: #555;
  line-height: 1.2em;
  margin: 0;
}

/* Right column containing the large image + floating box */
.team-arsenal-image-container {
  position: relative;
  height:550px;
  width:40%;
}

/* Large image styling:
   - No border-radius or box-shadow to match the flat style in the screenshot
*/
.team-arsenal-image-container img {
  width: 100%;border-radius:26px;
  height:100%; object-fit:cover;
  display: block;
}

/* Floating box near top-right of the image */
.floating-box {
  position: absolute;
  top: 8%;
  right: 8%;
  background-color: #000;
  color: #fff;
  padding: 1rem;
  border-radius: 10px;
  width: 220px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
}

/* Floating box image (avatar) */
.floating-box img {
  width: 35px;
  height: 35px;
  border-radius: 50%;
  margin-right: 0.5rem;
  vertical-align: middle;
  object-fit: cover;
}

.floating-box-title {
  font-weight: bold;
  display: flex;
  align-items: center;
  font-size: 0.95rem;
}

.floating-box-content {
  font-size: 0.9rem;
  margin-top: 0.5rem;
  line-height: 1.4em;
}
</style>

<section class="team-arsenal-section">
  <!-- Left Column: Heading + Feature Blocks -->
  <div class="team-arsenal-text">
    <h2>{{ section.settings.heading }}</h2>
    {% for block in section.blocks %}
      {% if block.type == "feature" %}
        <div class="feature">
          {% if block.settings.feature_icon %}
            <img 
              src="{{ block.settings.feature_icon | img_url: 'small' }}" 
              class="feature-icon" 
              alt="Feature Icon"
            >
          {% endif %}
        <div class="content">
            <h4>{{ block.settings.feature_title }}</h4>
          <p>{{ block.settings.feature_subtitle }}</p>
        </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <!-- Right Column: Large Image + Floating Box -->
  <div class="team-arsenal-image-container">
    {% if section.settings.large_image %}
      <img 
        src="{{ section.settings.large_image | img_url: 'large' }}" 
        alt="Section Image"
      >
    {% endif %}

    {% for block in section.blocks %}
      {% if block.type == "floating_box" %}
        <div class="floating-box">
          <div class="floating-box-title">
            {% if block.settings.floating_image %}
              <img 
                src="{{ block.settings.floating_image | img_url: 'small' }}" 
                alt="Floating Box Avatar"
              >
            {% endif %}
            <span>{{ block.settings.floating_title }}</span>
          </div>
          <div class="floating-box-content">
            {{ block.settings.floating_content }}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>
