{% schema %}
{
  "name": "Video Slider",
  "settings": [],
  "blocks": [
    {
      "type": "video",
      "name": "Video",
      "settings": [
        {
          "type": "text",
          "id": "video_url",
          "label": "Video URL",
          "default": "https://example.com/video.mp4"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Video Slider"
    }
  ]
}
{% endschema %}

<div class="video-slider">
  <div class="swiper mySwiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
          <video autoplay muted loop playsinline>
            <source src="{{ block.settings.video_url }}" type="video/mp4">
          </video>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
.video-slider {
  width: 100%;
  overflow: hidden;
  padding: 20px;
  background: linear-gradient(149.482deg, rgb(52, 133, 253) 0%, rgb(187, 246, 255) 100%);
  border-radius: 16px;
  box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.3);
}

.swiper {
  width: 100%;
  overflow: hidden;
}

.swiper-slide {
  width: 320px;
  height: 300px;
  overflow: hidden;
  border-radius: 12px;
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
}

.swiper-slide video {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    new Swiper(".mySwiper", {
      slidesPerView: "auto",
      spaceBetween: 15,
      loop: true,
      speed: 3000,
      autoplay: {
        delay: 0,
        disableOnInteraction: false,
      },
      freeMode: true
    });
  });
</script>
