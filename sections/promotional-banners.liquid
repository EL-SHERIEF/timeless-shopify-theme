{% schema %}
{
  "name": "Promotional Banners",
  "settings": [
    {
      "type": "url",
      "id": "video_one",
      "label": "First Banner Video URL"
    },
    {
      "type": "text",
      "id": "heading_one",
      "label": "First Banner Heading",
      "default": "Gift it to your loved ones and get 50% OFF!"
    },
    {
      "type": "url",
      "id": "video_two",
      "label": "Second Banner Video URL"
    },
    {
      "type": "text",
      "id": "heading_two",
      "label": "Second Banner Heading",
      "default": "Limited Time Offer: 20% OFF + FREE SHIPPING!"
    }
  ],
  "presets": [
    {
      "name": "Promotional Banners"
    }
  ]
}
{% endschema %}

<div class="promo-banners2">
  <div class="promo-banner">
    <video autoplay loop muted playsinline>
      <source src="{{ section.settings.video_one }}" type="video/mp4">
    </video>
    <h2>{{ section.settings.heading_one }}</h2>
  </div>
  <div class="promo-banner">
    <video autoplay loop muted playsinline>
      <source src="{{ section.settings.video_two }}" type="video/mp4">
    </video>
    <h2>{{ section.settings.heading_two }}</h2>
  </div>
</div>

<style>
  .promo-banners2 {
    margin: 15px;
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
    justify-content: center;
  }
   .promo-banners2 .promo-banner {
    flex: 1 1 calc(50% - 20px);
    position: relative;
    height: 400px;
    text-align: center;
    overflow: hidden;
    border-radius: 10px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
   .promo-banners2 .promo-banner video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 10px;
  }
   .promo-banners2 .promo-banner h2 {
    position: sticky;
    top: 15%;
    left: 5%;
    color: white;
    font-size: 1.5rem;
    z-index: 3;
    font-weight: bold;
  }
   .promo-banners2 .promo-banner:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }
  @media (max-width: 768px) {
    .promo-banners2 .promo-banners {
      flex-direction: column;
    }
    .promo-banners2 .promo-banner {
      flex: 1 1 100%;
    }
    .promo-banners2 .promo-banner h2 {
      font-size: 1.2rem;
      top: 5%;
      left: 5%;
    }
  }
</style>
