<style>
.hero-section {
  position: relative;
  width: 100%;
  padding: 60px;
  height: 70vh;
  display: flex;
  align-items: end;
  justify-content: start;
  text-align: start;
  color: white;
}
.hero-background-video {
  border-radius:10px; margin:14px;margin-top:0;
  position: absolute;
  top: 0;
  left: 0;
  width: calc(100% - 24px);
  height: 100%;
  object-fit: cover;
  z-index: -1;
}
.hero-content h1 {
  font-size: 3rem;font-weight:900;
  margin-bottom: .5rem;
}
.hero-content p {
  font-size: 1rem;
}
  
.marquee-wrapper {
  padding:10px 0;
  display:flex;flex-direction:column;align-items:center;justify-content:center;
  width: 100%;
  overflow: hidden;
}
.marquee {
  display: flex;
  align-items:center;justify-content:center;
  gap: 10vw;
  white-space: nowrap;
  animation: marquee-scroll 28s linear infinite;
}
.marquee span {
  font-size: .75rem;
  color: black;text-transform: uppercase;font-weight:900;
}
@keyframes marquee-scroll {
  from {
    transform: translateX(0%);
  }
  to {
    transform: translateX(-50%);
  }
}
@media (max-width: 768px) {
  .hero-content h1 {
    font-size: 2rem;
  }
  .hero-content p {
    font-size: 1rem;
  }
}
</style>

