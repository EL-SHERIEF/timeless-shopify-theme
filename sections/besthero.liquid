<style>
.hero-background {
  z-index: -1;
  border-radius: 20px;
  margin-top: 0;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.placeholder {
  z-index: -2;
  border-radius: 20px;
  margin-top: 0;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.hero-background-video {
  border-radius: 20px;
  margin-top: 0;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: -1;
}

.hero-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4); /* Semi-transparent dark overlay */
  z-index: 0;
  border-radius: 20px;
  margin-top: 0;
}

.hero-section {
  position: relative;
  width: calc(100% - 20px);
  padding: 40px 50px;
  height: 70vh;
  margin:0 20px;
  display: flex;
  align-items: end;
  justify-content: start;
  text-align: start;
  color: white;
}

.hero-content {
  position: relative;
  z-index: 1;
}

.hero-content h1 {
  max-width: 800px;
  line-height: 1.1;
  font-size: 81px;
  font-weight: 600;
  margin-bottom: 4px;
  animation: fadeinright 1s ease-in-out;
}

.hero-content p {
  max-width: 700px;
  font-size: 20px;
  animation: fadeinright 1s ease-in-out;
}

@media (max-width: 768px) {
  .hero-content h1 {
    letter-spacing: -1.5px;
    font-size: 44px;
    margin-bottom: .5rem;
  }
  .hero-content p {
    font-size: 13px;
  }
  .hero-section {
    padding: 30px;
    height: 50vh;
  }
}

.marquee-wrapper {
  padding: 10px 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  overflow: hidden;
}

.marquee {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10vw;
  white-space: nowrap;
  animation: marquee-scroll 28s linear infinite;
}

.marquee span {
  font-size: .75rem;
  color: black;
  text-transform: uppercase;
  font-weight: 900;
}

@keyframes fadeinright {
  from {
    transform: translateX(100%);
    opacity: 0%;
  }
  to {
    transform: translateX(0%);
    opacity: 100%;
  }
}

@keyframes marquee-scroll {
  from {
    transform: translateX(0%);
  }
  to {
    transform: translateX(-50%);
  }
}
</style>