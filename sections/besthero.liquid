    },
    {
      "type": "checkbox",
      "id": "show_overlay",
      "label": "Show dark overlay",
      "default": false
    },
    {
      "type": "text",
      "id": "marquee_slot_1",
      "label": "Marquee Slot 1",
      "default": "LIMITED AMOUNT"
    },
    {
      "type": "text",
      "id": "marquee_slot_2",
      "label": "Marquee Slot 2",
      "default": "FREE SHIPPING!!"
    },
    {
