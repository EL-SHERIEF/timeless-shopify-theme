      "id": "marquee_slot_3",
      "label": "Marquee Slot 3",
      "default": "ORDER NOW!!"
    },
    {
      "type": "text",
      "id": "marquee_slot_4",
      "label": "Marquee Slot 4",
      "default": "LIMITED AMOUNT"
    },
    {
      "type": "text",
      "id": "marquee_slot_5",
      "label": "Marquee Slot 5",
      "default": "FREE SHIPPING!!"
    },
    {
      "type": "text",
      "id": "marquee_slot_6",
      "label": "Marquee Slot 6",
      "default": "ORDER NOW!!"
    },
    {
      "type": "text",
      "id": "marquee_slot_7",
      "label": "Marquee Slot 7",
      "default": "LIMITED AMOUNT"
    },
    {
      "type": "text",
      "id": "marquee_slot_8",
      "label": "Marquee Slot 8",
      "default": "FREE SHIPPING!!"
    }
  ],
  "presets": [
    {
      "name": "Hero Section with Video and Marquee"
    }
  ]
}
{% endschema %}

<div class="hero-section">
  {% if section.settings.use_image_instead_of_video %}
    <img class="hero-background" width="100%" height="100%" src="{{ section.settings.image | img_url: 'master' }}" alt="{{ section.settings.name | escape }}"/>
  {% else %}
    <video autoplay loop muted playsinline class="hero-background-video">
      <source src="{{ section.settings.background_video_url }}" type="video/mp4">
    </video>
    <img class="placeholder" width="100%" height="100%" src="{{ section.settings.image | img_url: 'low' }}" alt="{{ section.settings.name | escape }}"/>
  {% endif %}
  {% if section.settings.show_overlay %}
    <div class="hero-overlay"></div>
  {% endif %}
  <div class="hero-content">
    <h1>{{ section.settings.hero_heading }}</h1>
    <p>{{ section.settings.hero_text }}</p>
  </div>
</div>
<div class="marquee-wrapper">
  <div class="marquee">
