{% schema %}
{
  "name": "Before After Slider",
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#fff9f3"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#1a1a1a"
    },
    {
      "type": "image_picker",
      "id": "before_image",
      "label": "Before Image"
    },
    {
      "type": "image_picker",
      "id": "after_image",
      "label": "After Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Achieve long-lasting results effortlessly"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Get smooth skin without the hassle of daily shaving or salon appointments. In just a few weeks, youâ€™ll enjoy long-lasting results. A simple solution for beauty that lasts."
    }
  ],
  "presets": [
    {
      "name": "Before After Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="media-text-section">
  <div class="section-container" style="--background: {{ section.settings.background_color | split: '#' | last | prepend: '#' }}; --text-color: {{ section.settings.text_color | split: '#' | last | prepend: '#' }};">
    <div class="content-wrapper">
      <div class="media-text-block">
        <div class="media-container">
          <div class="before-after-slider">
            <!-- After Image -->
            {% if section.settings.after_image %}
              <img src="{{ section.settings.after_image | img_url: '800x' }}" alt="After Image" class="media-image after-image">
            {% else %}
              <div class="media-placeholder"></div>
            {% endif %}
            <!-- Before Image (Overlay) -->
            {% if section.settings.before_image %}
              <img src="{{ section.settings.before_image | img_url: '800x' }}" alt="Before Image" class="media-image before-image" style="clip-path: inset(0 50% 0 0);">
            {% endif %}
            <!-- Slider -->
            <input type="range" min="0" max="100" value="50" class="slider-range" aria-label="Before/After slider">
            <div class="slider-line" style="left: 50%;">
              <span class="slider-thumb"></span>
            </div>
            <!-- Captions -->
            <div class="caption before-caption">Before</div>
            <div class="caption after-caption">After</div>
          </div>
        </div>
        <div class="text-container">
          <h3 class="title">{{ section.settings.title }}</h3>
          <p class="description">{{ section.settings.description }}</p>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const slider = document.querySelector('.slider-range');
    const beforeImage = document.querySelector('.before-image');
    const sliderLine = document.querySelector('.slider-line');
    const beforeCaption = document.querySelector('.before-caption');
    const afterCaption = document.querySelector('.after-caption');

    function updateSlider(value) {
      const percentage = parseInt(value);
      beforeImage.style.clipPath = `inset(0 ${100 - percentage}% 0 0)`;
      sliderLine.style.left = `${percentage}%`;

      // Dynamic caption visibility
      if (percentage > 50) {
        beforeCaption.style.opacity = '1';
        afterCaption.style.opacity = '0';
      } else if (percentage === 50) {
        beforeCaption.style.opacity = '1';
        afterCaption.style.opacity = '1';
      } else {
        beforeCaption.style.opacity = '0';
        afterCaption.style.opacity = '1';
      }
    }

    // Initialize slider
    updateSlider(slider.value);

    // Update on input
    slider.addEventListener('input', (e) => updateSlider(e.target.value));
  });
</script>

<style>
  :root {
    --spacing-unit: 1rem;
    --max-width: 72rem;
    --shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    --transition: all 0.3s ease;
  }

  .media-text-section {
    padding: var(--spacing-unit);
  }

  .section-container {
    background: var(--background, #fff9f3);
    color: var(--text-color, #1a1a1a);
    padding: calc(var(--spacing-unit) * 2) 0;
  }

  .content-wrapper {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--spacing-unit);
  }

  .media-text-block {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-unit);
    align-items: center;
    transition: var(--transition);
  }

  .media-container,
  .text-container {
    width: 100%;
    max-width: 100%;
  }

  .before-after-slider {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .media-image {
    width: 100%;
    height: auto;
    border-radius: 12px;
    object-fit: cover;
    box-shadow: var(--shadow);
  }

  .before-image {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
  }

  .after-image {
    position: relative;
    z-index: 0;
  }

  .slider-range {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    cursor: ew-resize;
    z-index: 3;
  }

  .slider-line {
    position: absolute;
    top: 0;
    width: 2px;
    height: 100%;
    background-color: #fff;
    z-index: 2;
    transition: left 0.05s ease-in-out;
  }

  .slider-thumb {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 40px;
    height: 40px;
    background-color: #0091DF;
    border-radius: 50%;
    transform: translate(-50%, -50%);
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
  }

  .caption {
    position: absolute;
    bottom: 12px;
    color: #fff;
    font-weight: bold;
    text-transform: uppercase;
    background-color: rgba(0, 0, 0, 0.55);
    padding: 6px 12px;
    border-radius: 15px;
    transition: opacity 0.2s ease-in-out;
    z-index: 2;
  }

  .before-caption {
    left: 12px;
  }

  .after-caption {
    right: 12px;
  }

  .media-placeholder {
    width: 100%;
    height: 250px;
    background-color: #e5e7eb;
    border-radius: 12px;
    box-shadow: var(--shadow);
  }

  .text-container {
    padding: var(--spacing-unit);
  }

  .title {
    font-size: 1.75rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: calc(var(--spacing-unit) / 2);
    color: var(--text-color, #1a1a1a);
  }

  .description {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--text-color, #1a1a1a);
    opacity: 0.9;
  }

  /* Large Screens (Row Layout) */
  @media (min-width: 768px) {
    .media-text-block {
      flex-direction: row;
      align-items: center;
      gap: calc(var(--spacing-unit) * 2);
    }

    .media-container,
    .text-container {
      width: 50%;
    }

    .title {
      font-size: 2rem;
    }

    .description {
      font-size: 1.125rem;
    }

    .media-image:hover {
      transform: scale(1.02);
    }
  }

  /* Small Screens (Column Layout) */
  @media (max-width: 767px) {
    .text-container {
      padding-bottom: 45px;
    }

    .title {
      font-size: 1.5rem;
    }

    .description {
      font-size: 0.875rem;
    }

    .media-placeholder {
      height: 200px;
    }
  }
</style>