{% comment %}
  TESTIMONIALS SECTION - IDENTICAL TO IMAGE STYLE
{% endcomment %}

<section id="testimonials-{{ section.id }}" class="testimonials-section">
  {% if section.settings.heading != blank %}
    <h2 class="heading">{{ section.settings.heading }}</h2>
  {% endif %}

  <!-- Swiper container -->
  <div class="swiper-container testimonials-carousel">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        {% if block.type == 'testimonial' %}
          <div class="swiper-slide testimonial-slide">
            <div class="testimonial-content">
              <div class="testimonial-image">
                {% if block.settings.image %}
                  <img 
                    src="{{ block.settings.image | img_url: 'medium' }}" 
                    alt="{{ block.settings.name | escape }}">
                {% endif %}
              </div>
              <p class="testimonial-quote">{{ block.settings.quote }}</p>
              <div class="stars">★★★★★</div>
              <span class="testimonial-author">{{ block.settings.name }}</span>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<!-- Initialize Swiper -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    var swiper = new Swiper('.testimonials-carousel', {
      effect: 'fade',
      loop: true,
      autoplay: {
        delay: {{ section.settings.autoplay_speed | default: 3000 }},
      },
      speed: 600,
    });
  });
</script>

<style>
  #testimonials-{{ section.id }}.testimonials-section {
    padding: 80px 20px;
    text-align: center;
    background-color: #faf8fc;
  }

  .testimonial-slide {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .testimonial-image {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    overflow: hidden;
    margin-bottom: 15px;
  }

  .testimonial-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .testimonial-quote {
    font-size: 22px;
    font-weight: 500;
    color: #111;
    margin-bottom: 10px;
  }

  .stars {
    font-size: 20px;
    color: #ffcc00;
    margin-bottom: 10px;
  }

  .testimonial-author {
    font-size: 16px;
    font-weight: bold;
    color: #666;
  }
</style>

{% schema %}
{
  "name": "Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "What Our Customers Say"
    },
    {
      "type": "number",
      "id": "autoplay_speed",
      "label": "Autoplay Speed (ms)",
      "default": 3000
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Customer Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Customer Name"
        },
        {
          "type": "text",
          "id": "quote",
          "label": "Testimonial Text"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Customer Testimonials",
      "category": "Testimonials"
    }
  ]
}
{% endschema %}
