{% comment %}
  TESTIMONIALS CAROUSEL SECTION
{% endcomment %}

<section id="testimonials-{{ section.id }}" class="testimonials-section">
  {% if section.settings.heading != blank %}
    <h2 class="heading">{{ section.settings.heading }}</h2>
  {% endif %}

  <!-- Swiper container -->
  <div class="swiper-container testimonials-carousel">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        {% if block.type == 'testimonial' %}
          <div class="swiper-slide testimonial-slide">
            <div class="testimonial-image">
              {% if block.settings.image %}
                <img 
                  src="{{ block.settings.image | img_url: 'medium' }}" 
                  alt="{{ block.settings.name | escape }}"
                >
              {% endif %}
            </div>
            
            <!-- Example static heading or you can make it dynamic if you want -->
            <h3 class="testimonial-title">#1 BEST PURCHASE!</h3>
            
            {% if block.settings.quote %}
              <p class="testimonial-quote">
                {{ block.settings.quote }}
              </p>
            {% endif %}
            
            {% if block.settings.name %}
              <span class="testimonial-author">
                {{ block.settings.name }}
              </span>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <!-- Pagination (dots) -->
    <div class="swiper-pagination"></div>
  </div>
</section>

<!-- Initialize Swiper -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    var swiper = new Swiper('.testimonials-carousel', {
      effect: 'fade',
      loop: true,
      autoplay: {
        delay: {{ section.settings.autoplay_speed | default: 3000 }},
      },
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      speed: 600, // transition speed
    });
  });
</script>

<style>
  /* Testimonials Section Wrapper */
  #testimonials-{{ section.id }}.testimonials-section {
    background-color: #fdf7f8; /* example light background */
    padding: 50px 20px;
    text-align: center;
  }

  .testimonials-section .heading {
    font-size: 28px;
    font-weight: 600;
    margin-bottom: 40px;
  }

  /* Swiper slide wrapper */
  .testimonial-slide {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 0 20px;
  }

  /* Circular masked image */
  .testimonial-image {
    width: 180px;
    height: 180px;
    border-radius: 50%;
    overflow: hidden;
    margin-bottom: 20px;
    position: relative;
  }

  .testimonial-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .testimonial-title {
    font-size: 24px;
    font-weight: 600;
    margin-bottom: 10px;
  }

  .testimonial-quote {
    font-size: 16px;
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto 15px;
    color: #444;
  }

  .testimonial-author {
    display: block;
    font-weight: 700;
    font-size: 14px;
    margin-top: 5px;
  }

  /* Swiper pagination (dots) styling */
  .swiper-pagination-bullet {
    background: #ccc !important;
    opacity: 1;
  }
  .swiper-pagination-bullet-active {
    background: #333 !important;
  }
</style>

{% schema %}
{
  "name": "Testimonials Carousel",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Hear From Them!"
    },
    {
      "type": "number",
      "id": "autoplay_speed",
      "label": "Autoplay Speed (ms)",
      "default": 3000
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Author Name"
        },
        {
          "type": "text",
          "id": "quote",
          "label": "Quote"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Testimonials Carousel",
      "category": "Testimonials"
    }
  ]
}
{% endschema %}