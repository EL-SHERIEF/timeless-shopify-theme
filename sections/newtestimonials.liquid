{% comment %}
  TESTIMONIALS CAROUSEL SECTION WITH INFINITE MARQUEE AND STAR RATING
{% endcomment %}

<section id="testimonials-{{ section.id }}" class="testimonials-section">
  {% if section.settings.heading != blank %}
    <h2 class="heading">{{ section.settings.heading }}</h2>
  {% endif %}

  <div class="marquee-container">
    <div class="marquee">
      {% for block in section.blocks %}
        {% if block.type == 'testimonial' %}
          <div class="testimonial-slide">
            <div class="testimonial-image">
              {% if block.settings.image %}
                <img 
                  src="{{ block.settings.image | img_url: 'medium' }}" 
                  alt="{{ block.settings.name | escape }}">
              {% endif %}
            </div>
            <div class="content">
              <h3 class="testimonial-title">#1 BEST PURCHASE!</h3>
              {% if block.settings.quote %}
                <p class="testimonial-quote">{{ block.settings.quote }}</p>
              {% endif %}
              {% if block.settings.name %}
                <span class="testimonial-author">{{ block.settings.name }}</span>
              {% endif %}
              {% if block.settings.stars %}
                <div class="star-rating">
                  {% for i in (1..block.settings.stars) %}
                    &#9733;
                  {% endfor %}
                </div>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .testimonials-section {
    padding: 50px 20px;
    text-align: center;
    overflow: hidden;
    white-space: nowrap;
    position: relative;
  }
  
  .marquee-container {
    width: 100%;
    overflow: hidden;
  }
  
  .marquee {
    display: flex;
    gap: 30px;
    animation: marquee 15s linear infinite;
  }
  
  @keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-100%); }
  }
  
  .testimonial-slide {
    display: flex;
    align-items: center;
    gap: 30px;
    flex: 0 0 auto;
  }
  
  .testimonial-image {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    overflow: hidden;
  }
  
  .testimonial-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .testimonial-title {
    font-size: 20px;
    font-weight: bold;
  }
  
  .testimonial-quote {
    font-size: 16px;
    color: #555;
  }
  
  .testimonial-author {
    font-weight: bold;
  }
  
  .star-rating {
    font-size: 20px;
    color: gold;
  }
</style>

{% schema %}
{
  "name": "Testimonials Carousel",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Hear From Them!"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Author Name"
        },
        {
          "type": "text",
          "id": "quote",
          "label": "Quote"
        },
        {
          "type": "number",
          "id": "stars",
          "label": "Star Rating",
          "default": 5,
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Testimonials Carousel",
      "category": "Testimonials"
    }
  ]
}
{% endschema %}
