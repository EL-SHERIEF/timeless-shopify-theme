{%- unless request.path == routes.root_url -%}
  <nav class="section py-4">
    test
  </nav>

  <style type="text/tailwindcss">
    #shopify-section-{{ section.id }} {
      --canvas: {{ section.settings.color_scheme.settings.canvas }};
      --ink: {{ section.settings.color_scheme.settings.ink }};
      --stroke: {{ section.settings.color_scheme.settings.stroke }};
      @apply bg-[var(--canvas)] text-[var(--ink)];
    }
  </style>
{%- endunless -%}

{% schema %}
{
  "name": "Breadcrumbs",
  "tag": "article",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme"
    }
  ],
  "limit": 1,
  "presets": [
    {
      "name": "Breadcrumbs"
    }
  ]
}
{% endschema %}
