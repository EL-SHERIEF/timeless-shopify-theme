  .section-documentation:empty {
    display: none;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Theme Documentation",
  "tag": "section",
  "class": "section-documentation p-4",
  "limit": 1,
  "settings": [
    {
      "type": "header",
      "content": "Theme Documentation",
      "info": "Visible only in the Theme Editor"
    }
  ],
  "presets": [
    {
      "name": "Theme Documentation",
      "settings": {
      }
    }
  ],
  "enabled_on": {
    "templates": [
      "*"
    ]
  }
}
{% endschema %}
