{% schema %}
{
  "name": "Text and Image Section",
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "item_image",
          "label": "Item Image or GIF"
        },
        {
          "type": "text",
          "id": "item_title",
          "label": "Title",
          "default": "Feature Title"
        },
        {
          "type": "text",
          "id": "item_subtitle",
          "label": "Subtitle",
          "default": "Feature description"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Text and Image Section"
    }
  ]
}
{% endschema %}

<div class="text-image-section">
  {% for block in section.blocks %}
    <div class="text-image-item">
      {% if block.settings.item_image != blank %}
        <img src="{{ block.settings.item_image | img_url: 'medium' }}" alt="Feature Image" class="feature-image">
      {% endif %}
      <div class="text-content">
        <h2>{{ block.settings.item_title }}</h2>
        <p>{{ block.settings.item_subtitle }}</p>
      </div>
    </div>
  {% endfor %}
</div>

<style>
  .text-image-section {
    display: flex;flex-direction:row;flex-wrap:wrap;
    justify-content: center;
    gap: 20px;
    padding: 20px;
    flex-wrap: wrap;
  }

  .text-image-item {
    place-content: center;
    align-items: center;
    place-self: start;
    border-radius: 24px;
    display: flex;
    flex: 0 0 auto;
    flex-flow: row;
    gap: 12px;
    height: auto;
    padding: 20px 16px;
    position: relative;
    max-width:100%;
    border: 1px solid #eaecf0;
  }

  .feature-image {
    width: 48px;
    height: 48px;
    object-fit: cover;
    border-radius: 50%;
  }

  .text-content {
    place-content: center;
    align-items: start;
    display: flex;
    flex: 1 0 0px;
    flex-flow: column;
    gap: 0px;
    height: min-content;
    padding: 0px;
    position: relative;
    width: 1px;
  }

  .text-content h2 {
    font-size: 16px;
    color: #111111;
    font-weight: 600;
    margin: 0;
  }

  .text-content p {
    font-size: 14px;
    color: #5f6980;
    margin: 5px 0 0;
  }

  @media (max-width: 768px) {
    .text-image-item {
      flex-direction: column;
      text-align: center;
    }
  }
</style>