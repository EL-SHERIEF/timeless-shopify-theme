{% schema %}
{
  "name": "Text and Icon Section",
  "settings": [],
  "blocks": [
    {
      "type": "icon_text_item",
      "name": "Item",
      "settings": [
        {
          "type": "text",
          "id": "feature_text",
          "label": "Feature Text",
          "default": "Your feature here"
        },
        {
          "type": "html",
          "id": "feature_icon",
          "label": "Feature SVG Icon",
          "default": "<svg width='50' height='50' viewBox='0 0 24 24'><circle cx='12' cy='12' r='10' stroke='black' stroke-width='2' fill='none'/></svg>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Text and Icon Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="icon-text-section">
  {% for block in section.blocks %}
    <div class="icon-text-item" {{ block.shopify_attributes }}>
      <div class="icon" aria-hidden="true">
        {{ block.settings.feature_icon }}
      </div>
      <div class="text">
        {{ block.settings.feature_text }}
      </div>
    </div>
  {% endfor %}
</div>

<style>
  .icon-text-section {
    display: flex;
    justify-content: center;
    gap: 40px;
    flex-wrap: wrap;
    padding: 20px;
    background-color: transparent;
  }

  .icon-text-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    transition: all 0.3s ease;
  }

  .icon-text-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .icon-text-item .icon svg {
    width: 50px;
    height: 50px;
    fill: currentColor;
  }

  .icon-text-item .text {
    margin-top: 10px;
    font-size: 1rem;
    font-weight: bold;
  }
</style>
