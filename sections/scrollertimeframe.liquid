{% schema %}
{
  "name": "Hair Removal Timeline",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "How long till my hair’s gone?"
    },
    {
      "type": "header",
      "content": "Timeline Boxes"
    },
    {
      "type": "textarea",
      "id": "box_1_heading",
      "label": "Box 1 Heading",
      "default": "2-4 Weeks"
    },
    {
      "type": "textarea",
      "id": "box_1_content",
      "label": "Box 1 Content",
      "default": "You’ll be surprised at just how fast your hair growth starts to slow — you’ll likely notice a change after your first or second session."
    },
    {
      "type": "image_picker",
      "id": "box_1_image",
      "label": "Box 1 Image"
    },
    {
      "type": "textarea",
      "id": "box_2_heading",
      "label": "Box 2 Heading",
      "default": "5-8 Weeks"
    },
    {
      "type": "textarea",
      "id": "box_2_content",
      "label": "Box 2 Content",
      "default": "After a month of treatments, you'll start to notice patches of thinner, slower hair growth."
    },
    {
      "type": "image_picker",
      "id": "box_2_image",
      "label": "Box 2 Image"
    },
    {
      "type": "textarea",
      "id": "box_3_heading",
      "label": "Box 3 Heading",
      "default": "8-12+ Weeks"
    },
    {
      "type": "textarea",
      "id": "box_3_content",
      "label": "Box 3 Content",
      "default": "By this point, you'll see significantly less hair and enjoy smoother skin with minimal regrowth."
    },
    {
      "type": "image_picker",
      "id": "box_3_image",
      "label": "Box 3 Image"
    },
     {
      "type": "textarea",
      "id": "time1",
      "label": "time under the scroll bar",
      "default": "1-3 weeks"
    },
     {
      "type": "textarea",
      "id": "time2",
      "label": "time under the scroll bar",
      "default": "3-4 weeks"
    },
      {
      "type": "textarea",
      "id": "time3",
      "label": "time under the scroll bar",
      "default": "4-6 weeks"
    },
  ],
  "presets": [
    {
      "name": "Hair Removal Timeline",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<section class="hair-timeline-section">
  <h2 class="section-heading">{{ section.settings.section_heading }}</h2>
  <div class="timeline-wrapper">
    <div class="timeline-box">
      <img src="{{ section.settings.box_1_image | img_url: 'master' }}" alt="Before and After">
      <h3>{{ section.settings.box_1_heading }}</h3>
      <p>{{ section.settings.box_1_content }}</p>
    </div>
    <div class="timeline-box">
      <img src="{{ section.settings.box_2_image | img_url: 'master' }}" alt="Before and After">
      <h3>{{ section.settings.box_2_heading }}</h3>
      <p>{{ section.settings.box_2_content }}</p>
    </div>
    <div class="timeline-box">
      <img src="{{ section.settings.box_3_image | img_url: 'master' }}" alt="Before and After">
      <h3>{{ section.settings.box_3_heading }}</h3>
      <p>{{ section.settings.box_3_content }}</p>
    </div>
  </div>

  <div class="time">
     <h3>{{ section.settings.time1 }}</h3>
     <h3>{{ section.settings.time2 }}</h3>
     <h3>{{ section.settings.time3 }}</h3>
  </div>
</section>

<style>
  .time{
    display:flex;flex-direction:row;width:100%;justify-content:space-between;align-items:center;
    padding:0 10px
  }
.hair-timeline-section {
  padding: 50px 20px;
  text-align: center;
}

.section-heading {
  font-size: 32px;
  font-weight: 700;
  color: #333;
  margin-bottom: 30px;
}

.timeline-wrapper {
  display: flex;
  overflow-x: auto;
  gap: 20px;
  scroll-snap-type: x mandatory;
  padding-bottom: 10px;
}

.timeline-box {
  flex: 0 0 80%;
  max-width: 80%;
  background-color: #fff;
  border-radius: 16px;
  padding: 20px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  scroll-snap-align: start;
}

.timeline-box img {
  width: 100%;
  border-radius: 12px;
  margin-bottom: 15px;
}

.timeline-box h3 {
  font-size: 24px;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
}

.timeline-box p {
  font-size: 16px;
  color: #666;
}

::-webkit-scrollbar {
  height: 8px;
}

::-webkit-scrollbar-track {
  background: white;
  border-radius: 1px;
}

::-webkit-scrollbar-thumb {
  background: black;
  border-radius: 10px;
}
</style>
