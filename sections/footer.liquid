<div class="section flex flex-wrap gap-y-8 gap-x-16 items-start justify-between py-12 px-6 bg-[var(--canvas)] text-[var(--ink)]">
  <!-- Logo Section -->
  <div class="flex flex-col items-start gap-6">
    <div class="max-w-[160px]">
      {%- if section.settings.logo -%}
        {{ section.settings.logo
          | image_url: width: 300
          | image_tag: class: 'max-h-[160px] object-contain', loading: 'lazy'
          | link_to: routes.root_url
        }}
      {%- else -%}
        {{ shop.name | link_to: routes.root_url, class: 'font-heading text-lg font-bold' }}
      {%- endif -%}
    </div>

    <!-- Social Links -->
    <nav class="flex gap-4">
      {%- for social in shop.brand.metafields.social_links -%}
        <a href="{{ social.last }}" aria-label="{{ social.first }}" class="p-2 rounded-full bg-gray-100 hover:bg-gray-200 transition-all">
          {%- render 'icon' with social.first -%}
        </a>
      {%- endfor -%}
    </nav>
  </div>

  <!-- Footer Menu -->
  <div class="grid gap-4">
    {% render 'footer-menu' %}
  </div>

  <!-- Newsletter Subscription -->
  <div class="w-full max-w-sm">
    <h4 class="text-lg font-semibold mb-2">Subscribe to our newsletter</h4>
    {% render 'newsletter-form', id: section.id, class: 'grid grid-cols-[1fr,auto] gap-2 items-center' %}
  </div>
</div>

<style type="text/tailwindcss">
  #shopify-section-{{ section.id }} {
    --canvas: {{ section.settings.color_scheme.settings.canvas }};
    --ink: {{ section.settings.color_scheme.settings.ink }};
    --stroke: {{ section.settings.color_scheme.settings.stroke }};

    @apply bg-[var(--canvas)] text-[var(--ink)];
  }

  /* General Styling */
  .section a {
    @apply text-sm font-medium text-gray-700 hover:text-black transition-colors;
  }

  /* Newsletter Form Styling */
  .newsletter-form input {
    @apply border border-gray-300 rounded-lg p-2 w-full;
  }

  .newsletter-form button {
    @apply bg-black text-white rounded-lg p-2 hover:bg-gray-900;
  }
</style>
