<div class="bg-[#f9fafb] py-12">
  <div class="max-w-7xl mx-auto px-6 md:px-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Logo Section -->
      <div>
        {%- if section.settings.logo -%}
          {{ section.settings.logo
            | image_url: width: 300
            | image_tag: class: 'max-h-10 object-contain', loading: 'lazy'
            | link_to: routes.root_url
          }}
        {%- else -%}
          <a href="{{ routes.root_url }}" class="text-xl font-semibold text-gray-900"> {{ shop.name }} </a>
        {%- endif -%}
      </div>

      <!-- Footer Menu (Now using Grid) -->
      <div class="grid grid-cols-3 gap-8">
        {%- for link in section.settings.menu.links -%}
          <div>
                  <a href="{{ child_link.url }}" class="hover:text-gray-900">{{ link.title }}</a>
            <ul class="space-y-1 text-gray-600">
              {%- for child_link in link.links -%}
                <li>
                  <a href="{{ child_link.url }}" class="hover:text-gray-900">{{ link.title }}</a>
                </li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endfor -%}
      </div>

      <!-- Social Links -->
      <div>
        <h4 class="text-gray-900 font-semibold mb-3">Follow Us</h4>
        <ul class="space-y-1 text-gray-600">
          <li><a href="#" class="hover:text-gray-900">Dribbble</a></li>
          <li><a href="#" class="hover:text-gray-900">Behance</a></li>
          <li><a href="#" class="hover:text-gray-900">Instagram</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>

<style type="text/tailwindcss">
  #shopify-section-{{ section.id }} {
    @apply bg-[var(--canvas)] text-[var(--ink)];
  }
</style>

{% schema %}
{
  "name": "Footer",
  "tag": "footer",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "footer"
    },
    {
      "type": "header",
      "content": "Social links"
    }
  ]
}
{% endschema %}
