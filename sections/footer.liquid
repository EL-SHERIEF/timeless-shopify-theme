<div class="bg-[#f9fafb] py-12">
  <div class="max-w-7xl mx-auto px-6 md:px-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Logo Section -->
      <div>
        {%- if section.settings.logo -%}
          {{ section.settings.logo
            | image_url: width: 300
            | image_tag: class: 'max-h-10 object-contain', loading: 'lazy'
            | link_to: routes.root_url
          }}
        {%- else -%}
          <a href="{{ routes.root_url }}" class="text-xl font-semibold text-gray-900"> {{ shop.name }} </a>
        {%- endif -%}
      </div>

      <!-- Footer Menu -->
      {% render 'footer-menu' %}

      <!-- Social Links -->
      <div>
        <h4 class="text-gray-900 font-semibold mb-3">Follow Us</h4>
        <ul class="space-y-1 text-gray-600">
          <li><a href="#" class="hover:text-gray-900">Dribbble</a></li>
          <li><a href="#" class="hover:text-gray-900">Behance</a></li>
          <li><a href="#" class="hover:text-gray-900">Instagram</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>
