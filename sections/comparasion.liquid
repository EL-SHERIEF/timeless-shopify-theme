{% schema %}
{
  "name": "cards",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Pricing"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Choose the best plan for your needs."
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Basic Plan"
        },
        {
          "type": "textarea",
          "id": "features",
          "label": "Features (comma separated)",
          "default": "Feature 1, Feature 2, Feature 3"
        },
        {
          "type": "image_picker",
          "id": "card_image",
          "label": "Floating Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "cards",
      "category": "Sections",
      "blocks": [
        {
          "type": "card"
        },
        {
          "type": "card"
        }
      ]
    }
  ]
}
{% endschema %}

<section class="py-24 bg-white">
  <div class="container mx-auto px-6">
    <div class="text-center">
      <h2 class="text-3xl font-bold">{{ section.settings.heading }}</h2>
      <p class="mt-4 text-gray-600">{{ section.settings.description }}</p>
    </div>
    <div class="grid gap-6 mt-10 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
      {% for block in section.blocks %}
        {% assign features = block.settings.features | split: "," %}
        <div class="relative p-8 rounded-xl backdrop-blur-lg bg-white/30 shadow-lg border border-white/20">
          <img src="{{ block.settings.card_image | img_url: 'medium' }}" alt="{{ block.settings.title }}" class="absolute -top-6 right-6 w-16 h-16 object-cover rounded-full shadow-md">
          <h3 class="text-xl font-semibold">{{ block.settings.title }}</h3>
          <ul class="mt-4 space-y-2 text-gray-700">
            {% for feature in features %}
              <li class="flex items-center gap-2">
                âœ… <span>{{ feature | strip }}</span>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endfor %}
    </div>
  </div>
</section>