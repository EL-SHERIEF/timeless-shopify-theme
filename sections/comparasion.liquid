<section class="py-24 bg-white">
  <div class="container mx-auto px-6">
    <div class="text-center mb-10">
      <h2 class="text-3xl font-bold">Why Choose Us?</h2>
      <p class="mt-4 text-gray-600">Compare our features against the competition.</p>
    </div>
    
    <div class="overflow-x-auto">
      <table class="w-full border-collapse border border-gray-200 text-left">
        <thead>
          <tr class="bg-gray-100 text-gray-700">
            <th class="p-4 border">Feature</th>
            <th class="p-4 border">Our Store</th>
            <th class="p-4 border">Competitor</th>
          </tr>
        </thead>
        <tbody>
          {% for feature in shop.metafields.comparison_table.features %}
          <tr class="border">
            <td class="p-4 border font-medium">{{ feature.name }}</td>
            <td class="p-4 border text-center">
              {% if feature.ours %}
                <span class="text-green-600 font-bold">✔ Yes</span>
              {% else %}
                <span class="text-red-500">✖ No</span>
              {% endif %}
            </td>
            <td class="p-4 border text-center">
              {% if feature.competitor %}
                <span class="text-green-600 font-bold">✔ Yes</span>
              {% else %}
                <span class="text-red-500">✖ No</span>
              {% endif %}
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</section>
