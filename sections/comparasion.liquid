{% schema %}
{
  "name": "Comparison Cards",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<h2>Why Choose Us?</h2>"
    },
    {
      "type": "richtext",
      "id": "subcontent",
      "label": "Subcontent",
      "default": "<p>Compare our features against the competition.</p>"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Feature Name"
        },
        {
          "type": "checkbox",
          "id": "ours",
          "label": "We have this feature"
        },
        {
          "type": "checkbox",
          "id": "competitor",
          "label": "Competitor has this feature"
        },
        {
          "type": "richtext",
          "id": "reason",
          "label": "Reason for inclusion/exclusion",
          "default": "<p>Explain why this feature is included or missing.</p>"
        }
      ]
    }
  ],
  "disabled_on": {
    "groups": [
      "*"
    ]
  },
  "presets": [
    {
      "name": "Comparison Cards",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "name": "Fast Shipping",
            "ours": true,
            "competitor": false,
            "reason": "<p>We prioritize quick deliveries to enhance customer satisfaction.</p>"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<section class="py-24 bg-pink-100">
  <div class="container mx-auto px-6">
    <div class="text-center mb-10">
      <h2 class="text-3xl font-bold text-pink-700">{{ section.settings.content }}</h2>
      <p class="mt-4 text-pink-600">{{ section.settings.subcontent }}</p>
    </div>
    
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-2">
      {% for block in section.blocks %}
      <div class="flex items-center p-6 rounded-3xl border border-gray-200 shadow-md bg-white">
        <div class="flex-1 text-center">
          <h3 class="text-xl font-semibold text-pink-700">{{ block.settings.name }}</h3>
          <p class="mt-4 text-gray-500">{{ block.settings.reason }}</p>
        </div>
        <div class="w-24 h-24 flex items-center justify-center rounded-full" 
             style="background-color: {% if block.settings.ours %} #FEE2E2 {% else %} #E5E7EB {% endif %}">
          {% if block.settings.ours %}
            <span class="text-green-600 text-4xl font-bold">✔</span>
          {% else %}
            <span class="text-red-500 text-4xl font-bold">✖</span>
          {% endif %}
        </div>
        <div class="w-24 h-24 flex items-center justify-center rounded-full" 
             style="background-color: {% if block.settings.competitor %} #FEE2E2 {% else %} #E5E7EB {% endif %}">
          {% if block.settings.competitor %}
            <span class="text-green-600 text-4xl font-bold">✔</span>
          {% else %}
            <span class="text-red-500 text-4xl font-bold">✖</span>
          {% endif %}
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<style type="text/tailwindcss">
  #shopify-section-{{ section.id }} {
    --canvas: {{ section.settings.color_scheme.settings.canvas }};
    --ink: {{ section.settings.color_scheme.settings.ink }};
    --stroke: {{ section.settings.color_scheme.settings.stroke }};
    @apply bg-[var(--canvas)] text-[var(--ink)];
  }
</style>
