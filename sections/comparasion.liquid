{% schema %}
{
  "name": "Pricing Cards",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Pricing"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Choose the best plan for your needs."
    }
  ],
  "blocks": [
    {
      "type": "pricing_card",
      "name": "Pricing Card",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Basic Plan"
        },
        {
          "type": "textarea",
          "id": "features",
          "label": "Features (comma separated)",
          "default": "Feature 1, Feature 2, Feature 3"
        },
        {
          "type": "image_picker",
          "id": "card_image",
          "label": "Floating Image"
        },
        {
          "type": "checkbox",
          "id": "all_checked",
          "label": "All Features Checked",
          "default": false
        }
      ]
    }
  ],
  
  "presets": [
    {
      "name": "Pricing Cards",
      "category": "Sections",
      "blocks": [
        {
          "type": "pricing_card"
        },
        {
          "type": "pricing_card"
        }
      ]
    }
  ]
}
{% endschema %}

<section class="py-24 bg-white">
  <div class="container mx-auto px-6">
    <div class="text-center">
      <h2 class="text-3xl font-bold">{{ section.settings.heading }}</h2>
      <p class="mt-4 text-gray-600">{{ section.settings.description }}</p>
    </div>
    <div class="grid gap-6 mt-10 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
      {% for block in section.blocks %}
        {% assign features = block.settings.features | split: "," %}
        <div class="relative p-8 rounded-xl backdrop-blur-lg bg-white/30 shadow-lg border border-white/20">
          <img src="{{ block.settings.card_image | img_url: 'medium' }}" alt="{{ block.settings.title }}" class="absolute -top-6 right-6 w-16 h-16 object-cover rounded-full shadow-md">
          <h3 class="text-xl font-semibold">{{ block.settings.title }}</h3>
          <ul class="mt-4 space-y-2 text-gray-700">
            {% for feature in features %}
              <li class="flex items-center gap-2">
                {% if block.settings.all_checked %}
                  <svg height="20px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path d="M4 12.6111L8.92308 17.5L20 6.5" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path> </g></svg>
                  {% else %}
<svg height="20px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path d="M20.7457 3.32851C20.3552 2.93798 19.722 2.93798 19.3315 3.32851L12.0371 10.6229L4.74275 3.32851C4.35223 2.93798 3.71906 2.93798 3.32854 3.32851C2.93801 3.71903 2.93801 4.3522 3.32854 4.74272L10.6229 12.0371L3.32856 19.3314C2.93803 19.722 2.93803 20.3551 3.32856 20.7457C3.71908 21.1362 4.35225 21.1362 4.74277 20.7457L12.0371 13.4513L19.3315 20.7457C19.722 21.1362 20.3552 21.1362 20.7457 20.7457C21.1362 20.3551 21.1362 19.722 20.7457 19.3315L13.4513 12.0371L20.7457 4.74272C21.1362 4.3522 21.1362 3.71903 20.7457 3.32851Z" fill="#de4a4a"></path> </g></svg>
{% endif %} <span>{{ feature | strip }}</span>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
