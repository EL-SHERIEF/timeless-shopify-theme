{% schema %}
{
  "name": "Comparison Cards",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<h2>Why Choose Us?</h2>"
    },
    {
      "type": "richtext",
      "id": "subcontent",
      "label": "Subcontent",
      "default": "<p>Compare our features against the competition.</p>"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Feature Name"
        },
        {
          "type": "checkbox",
          "id": "ours",
          "label": "We have this feature"
        },
        {
          "type": "checkbox",
          "id": "competitor",
          "label": "Competitor has this feature"
        },
       {
  "type": "text",
  "id": "reason",
  "label": "Reason for inclusion/exclusion"
}

      ]
    }
  ],
  "disabled_on": {
    "groups": [
      "*"
    ]
  },
  "presets": [
    {
      "name": "Comparison Cards",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "name": "Fast Shipping",
            "ours": true,
            "competitor": false,
            "reason": "We prioritize quick deliveries to enhance customer satisfaction."
          }
        }
      ]
    }
  ]
}
{% endschema %}

<section class="py-24 bg-white">
  <div class="container mx-auto px-6">
    <div class="text-center mb-10">
      <h2 class="text-3xl font-bold">{{ section.settings.content }}</h2>
      <p class="mt-4 text-gray-600">{{ section.settings.subcontent }}</p>
    </div>
    
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {% for block in section.blocks %}
      <div class="p-6 rounded-3xl border border-gray-200 shadow-md bg-white text-center">
        <h3 class="text-xl font-semibold">{{ block.settings.name }}</h3>
        <div class="mt-4">
          <p class="text-lg">
            {% if block.settings.ours %}
              <span class="text-green-600 font-bold">✔ Yes</span>
            {% else %}
              <span class="text-red-500">✖ No</span>
            {% endif %} - <strong>Us</strong>
          </p>
          <p class="text-lg">
            {% if block.settings.competitor %}
              <span class="text-green-600 font-bold">✔ Yes</span>
            {% else %}
              <span class="text-red-500">✖ No</span>
            {% endif %} - <strong>Competitor</strong>
          </p>
        </div>
        <p class="mt-4 text-gray-500">{{ block.settings.reason }}</p>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<style type="text/tailwindcss">
  #shopify-section-{{ section.id }} {
    --canvas: {{ section.settings.color_scheme.settings.canvas }};
    --ink: {{ section.settings.color_scheme.settings.ink }};
    --stroke: {{ section.settings.color_scheme.settings.stroke }};
    @apply bg-[var(--canvas)] text-[var(--ink)];
  }
</style>
