{% schema %}
{
  "name": "Pricing Cards",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Pricing"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Free forever. Upgrade for unlimited tasks, better security, and exclusive features."
    }
  ],
  "blocks": [
    {
      "type": "pricing_card",
      "name": "Pricing Card",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Free"
        },
        {
          "type": "number",
          "id": "monthly_price",
          "label": "Monthly Price",
          "default": 0
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Get started for free"
        },
        {
          "type": "checkbox",
          "id": "popular",
          "label": "Mark as Popular",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "inverse",
          "label": "Dark Theme",
          "default": false
        },
        {
          "type": "textarea",
          "id": "features",
          "label": "Features (comma separated)",
          "default": "Up to 5 project members, Unlimited tasks and projects, 2GB storage"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Pricing Cards",
      "category": "Sections",
      "blocks": [
        {
          "type": "pricing_card"
        },
        {
          "type": "pricing_card"
        },
        {
          "type": "pricing_card"
        }
      ]
    }
  ]
}
{% endschema %}

<section class="py-24 bg-white">
  <div class="container">
    <div class="section-heading">
      <h2 class="section-title">{{ section.settings.heading }}</h2>
      <p class="section-des mt-5">{{ section.settings.description }}</p>
    </div>
    <div class="flex flex-col gap-6 items-center mt-10 lg:flex-row lg:items-end lg:justify-center">
      {% for block in section.blocks %}
        {% assign features = block.settings.features | split: "," %}
        <div class="p-10 rounded-3xl border border-[#F1F1F1] shadow-lg max-w-xs w-full {% if block.settings.inverse %} bg-black text-white {% endif %}">
          <div class="flex justify-between">
            <h3 class="text-lg font-bold {% if block.settings.inverse %} text-white/60 {% else %} text-black/50 {% endif %}">
              {{ block.settings.title }}
            </h3>
            {% if block.settings.popular %}
              <div class="inline-flex text-sm px-4 py-1.5 rounded-xl border border-white/20 bg-gradient-to-r from-purple-400 to-blue-400 text-transparent bg-clip-text font-medium">
                Popular
              </div>
            {% endif %}
          </div>
          <div class="flex items-baseline gap-1 mt-[30px]">
            <span class="text-4xl font-bold tracking-tighter leading-none">${{ block.settings.monthly_price }}</span>
            <span class="tracking-tight font-bold text-black/50">/month</span>
          </div>
          <button class="btn btn-primary w-full mt-[30px] {% if block.settings.inverse %} bg-white text-black {% endif %}">
            {{ block.settings.button_text }}
          </button>
          <ul class="flex flex-col gap-5 mt-8">
            {% for feature in features %}
              <li class="text-sm flex items-center gap-4">
                âœ… <span>{{ feature | strip }}</span>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endfor %}
    </div>
  </div>
</section>