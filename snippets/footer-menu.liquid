<div class="grid grid-cols-3 gap-8">
  {%- for link in section.settings.menu.links -%}
    <div>
      <h4 class="text-gray-900 font-semibold mb-3">{{ link.title }}</h4>
      <ul class="space-y-1 text-gray-600">
        {%- for child_link in link.links -%}
          <li>
            <a href="{{ child_link.url }}" class="hover:text-gray-900">{{ child_link.title }}</a>
          </li>
        {%- endfor -%}
      </ul>
    </div>
  {%- endfor -%}
</div>
