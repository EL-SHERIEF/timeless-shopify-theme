<form class="relative" action="{{ routes.search_url }}">
  {%- if type != blank -%}
    <input name="type" value="{{ type | join: ',' }}" type="hidden" />
  {%- endif -%}

  <div class="with-label relative z-[3]">
    <label for="searchbox">Search</label>
    <input
      tabindex="1"
      class="input w-full"
      id="searchbox"
      name="q"
      value="{{ search.terms | escape }}"
      type="search"
      placeholder="{{ placeholder | default: 'Search' }}"
    />
  </div>

  {%- liquid
    if predictive
      render 'predictive-search'
    endif
  -%}
</form>
