<li class="grid gap-2">
  <a class="group grid gap-2" href="{{ product.url }}">
    <figure class="overflow-hidden">
      {{ product.featured_image
        | image_url: width: 500, height: 500
        | image_tag: class: 'w-full aspect-square object-cover transition-transform group-hover:scale-110', loading: 'lazy'
      }}
    </figure>

    <div class="h3 group-hover:underline">{{ product.title }}</div>
  </a>

  <div class="text-sm">
    {%- if product.price_varies -%}From{%- endif %}
    <span class="price">{{ product.price_min | money }}</span>
    {% if product.price_min < product.compare_at_price_min %}
      <s class="price">{{ product.compare_at_price_min | money }}</s>
    {% endif %}
    {% render 'unit-price', measurement: product.variants.first.unit_price_measurement %}
  </div>

  {%- unless product.has_only_default_variant -%}
    <nav class="text-sm">
      <div class="technical text-xs">{{ product.variants.size }} options</div>

      <div class="flex flex-wrap gap-x-[.5em]">
        {%- for product_option in product.options_with_values -%}
          {%- for value in product_option.values -%}
            {%- for variant in product.variants -%}
              {%- if variant.title contains value -%}
                <a class="hashtag hover:text-primary" href="{{ variant.url }}" title="{{ product_option.name }}">
                  {{- value -}}
                </a>
                {% break %}
              {%- endif -%}
            {%- endfor -%}
          {%- endfor -%}
          {%- unless forloop.last -%}Â·{%- endunless -%}
        {%- endfor -%}
      </div>
    </nav>
  {%- endunless -%}
</li>
