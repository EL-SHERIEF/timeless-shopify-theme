<meta property="og:site_name" content="{{ shop.name }}" />
<meta property="og:url" content="{{ canonical_url }}" />
<meta property="og:title" content="{{ page_title }}" />

{%- case request.page_type -%}
  {%- when 'product' -%}
    <meta property="og:type" content="product" />
    <meta property="og:price:amount" content="{{ product.price | money_without_currency }}">
    <meta property="og:price:currency" content="{{ cart.currency.iso_code }}">

  {%- when 'article' -%}
    <meta property="og:type" content="article" />

  {%- else -%}
    <meta property="og:type" content="website" />

{%- endcase %}

{%- if page_image -%}
  <meta property="og:image" content="https:{{ page_image | image_url: width: 1200 }}">
{%- endif -%}

{%- assign twitter = shop.brand.metafields.social_links.twitter.value -%}
{%- if twitter -%}
  <meta name="twitter:site" content="{{ twitter | split: 'twitter.com/' | last | prepend: '@' }}">
{%- endif -%}
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ page_title }}">
{%- if page_description -%}
  <meta name="twitter:description" content="{{ page_description }}">
{%- endif %}
