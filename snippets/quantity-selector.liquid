<div class="flex items-center space-x-2">
  <button 
    type="button" 
    class="bg-gray-100 text-black rounded-lg w-10 h-10 flex items-center justify-center font-medium transition-all duration-150"
    onclick="this.nextElementSibling.stepDown(); this.nextElementSibling.dispatchEvent(new Event('change'));">
    &minus;
  </button>
  <input
    class="input-number w-16 h-10 text-center border border-gray-200 rounded-lg bg-gray-100 text-black" 
    name="{{ name | default: 'quantity' }}" 
    value="{{ value | default: 1 }}" 
    min="{{ min | default: 1 }}" 
    type="number" 
    required 
    {% if readonly %}readonly{% endif %}
  />
  <button 
    type="button" 
    class="bg-gray-100 hover:bg-gray-200 active:bg-gray-300 text-black rounded-lg w-10 h-10 flex items-center justify-center font-medium transition-all duration-150"
    onclick="this.previousElementSibling.stepUp(); this.previousElementSibling.dispatchEvent(new Event('change'));">
    &plus;
  </button>
</div>
